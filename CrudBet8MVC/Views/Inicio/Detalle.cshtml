@model CrudBet8MVC.Models.Contacto

@{
    ViewData["Title"] = "Detalle Contactos";
}

<h1 class="text-center">Contacto con .NET 8 (.NET Core MVC)</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Detalle Usuario</strong>
                </h3>
            </div>
            <div class="card-body">

                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>Nombre:</strong> @Html.DisplayFor(m => m.Nombre)
                    </li>
                    <li class="list-group-item">
                        <strong>Telefono:</strong> @Html.DisplayFor(m => m.Telefono)
                    </li>
                    <li class="list-group-item">
                        <strong>Celular:</strong> @Html.DisplayFor(m => m.Celular)
                    </li>
                    <li class="list-group-item">
                        <strong>Email:</strong> @Html.DisplayFor(m => m.Email)
                    </li>
                    <li class="list-group-item">
                        <strong>Fecha:</strong> @Html.DisplayFor(m => m.FechaCreacion)
                    </li>
                </ul>

                <!--Botono volver atras-->
                <a asp-controller="Inicio" asp-action="Index">
                    <i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
                    Volver
                </a>


            </div>
        </div>
    </div>
</div>